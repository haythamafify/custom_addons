<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Template -->
    <template id="property_report_template_new">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1 class="text-center">Property Report</h1>
                        <p>Property Name:
                            <t t-esc="o.name"/>
                        </p>
                        <p>Description:
                            <t t-esc="o.description"/>
                        </p>
                        <p>Postcode:
                            <t t-esc="o.postcode"/>
                        </p>
                        <p>Expected Price:
                            <t t-esc="o.expected_price"/>
                        </p>
                        <p>Selling Price:
                            <t t-esc="o.selling_price"/>
                        </p>
                        <t t-if="o.name=='Property 01'">
                            <p>This is Property 01</p>
                        </t>

                        <t t-elif="o.name=='Property 02'">
                            <p>This is
                                <span t-esc="o.name"/>
                            </p>
                        </t>


                        <t t-else="">
                            <p>this is not Property 01</p>
                            <p>this is
                                <span t-field="o.name"/>
                            </p>


                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_property" model="ir.actions.report">
        <field name="name">Property Report from QWeb Module</field>
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">odoo_qweb_report.property_report_template_new</field>
        <field name="report_file">odoo_qweb_report.property_report_template_new</field>
        <field name="binding_model_id" ref="app_one.model_property"/>
        <field name="binding_type">report</field>
    </record>

</odoo>

