<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="calculator.Calculator">
        <div class="calculator-container p-5" style="min-height: 100vh; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
            <div class="card shadow-lg" style="max-width: 600px; margin: 0 auto; border-radius: 20px;">

                <!-- Header -->
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 20px 20px 0 0;">
                    <h2 class="mb-0 text-white">
                        <i class="fa fa-calculator me-2"/>
                        Simple Calculator
                    </h2>
                </div>

                <!-- Body -->
                <div class="card-body p-5">

                    <!-- Input 1 -->
                    <div class="mb-4">
                        <label class="form-label fw-bold" style="font-size: 1.1rem;">
                            <i class="fa fa-sort-numeric-asc me-2 text-primary"/>
                            First Number
                        </label>
                        <input
                            type="number"
                            class="form-control form-control-lg"
                            t-att-value="state.number1"
                            t-on-input="onNumber1Change"
                            placeholder="Enter first number"
                            style="border-radius: 10px; font-size: 1.5rem; text-align: center;"/>
                    </div>

                    <!-- Plus Icon -->
                    <div class="text-center mb-4">
                        <div class="d-inline-block p-3" style="background: #e8f5e9; border-radius: 50%; width: 60px; height: 60px;">
                            <i class="fa fa-plus" style="font-size: 2rem; color: #11998e;"/>
                        </div>
                    </div>

                    <!-- Input 2 -->
                    <div class="mb-4">
                        <label class="form-label fw-bold" style="font-size: 1.1rem;">
                            <i class="fa fa-sort-numeric-asc me-2 text-success"/>
                            Second Number
                        </label>
                        <input
                            type="number"
                            class="form-control form-control-lg"
                            t-att-value="state.number2"
                            t-on-input="onNumber2Change"
                            placeholder="Enter second number"
                            style="border-radius: 10px; font-size: 1.5rem; text-align: center;"/>
                    </div>

                    <!-- Equals Line -->
                    <div class="my-4">
                        <hr style="border-top: 3px solid #11998e;"/>
                    </div>

                    <!-- Result -->
                    <div class="result-section p-4 text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px;">
                        <h5 class="text-white mb-2">
                            <i class="fa fa-equals me-2"/>
                            Result
                        </h5>
                        <h1 class="display-1 fw-bold text-white mb-0" style="font-size: 4rem;">
                            <t t-esc="state.result"/>
                        </h1>
                    </div>

                    <!-- Reset Button -->
                    <div class="d-grid mt-4">
                        <button class="btn btn-danger btn-lg" t-on-click="reset" style="border-radius: 10px;">
                            <i class="fa fa-refresh me-2"/>
                            Reset Calculator
                        </button>
                    </div>

                    <!-- Info -->
                    <div class="alert alert-info mt-4 mb-0" role="alert">
                        <small>
                            <i class="fa fa-lightbulb-o me-1"/>
                            The result updates automatically as you type!
                        </small>
                    </div>

                </div>
            </div>
        </div>
    </t>
</templates>