<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="counter.IntegratedWorkspace">
        <div class="integrated-workspace-container p-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-header bg-dark text-white">
                                <h3>Integrated Workspace - Services Demo</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Counter Section -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h4>Counter Service</h4>
                            </div>
                            <div class="card-body text-center">
                                <h1 class="display-2 text-primary my-4">
                                    <t t-esc="counterValue"/>
                                </h1>
                                <div class="btn-group-vertical w-100" role="group">
                                    <button class="btn btn-success btn-lg mb-2" t-on-click="onIncrement">
                                        <i class="fa fa-plus"/> Increment
                                    </button>
                                    <button class="btn btn-danger btn-lg mb-2" t-on-click="onDecrement">
                                        <i class="fa fa-minus"/> Decrement
                                    </button>
                                    <button class="btn btn-secondary btn-lg" t-on-click="onReset">
                                        <i class="fa fa-refresh"/> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Weather Section -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-info text-white">
                                <h4>Weather Service</h4>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Select City:</label>
                                    <select class="form-select" t-on-change="onCityChange">
                                        <option value="">Choose a city...</option>
                                        <option value="Cairo">Cairo</option>
                                        <option value="Alexandria">Alexandria</option>
                                        <option value="London">London</option>
                                        <option value="New York">New York</option>
                                        <option value="Dubai">Dubai</option>
                                    </select>
                                </div>

                                <t t-if="isLoading">
                                    <div class="text-center my-5">
                                        <div class="spinner-border text-info" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                        <p class="mt-2">Loading weather data...</p>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="weather-display text-center">
                                        <h3 class="mb-3">
                                            <i class="fa fa-map-marker"/> <t t-esc="currentCity"/>
                                        </h3>
                                        <h1 class="display-4 text-warning mb-3">
                                            <i class="fa fa-sun-o"/> <t t-esc="temperature"/>Â°C
                                        </h1>
                                        <div class="alert alert-info">
                                            <h5><t t-esc="condition"/></h5>
                                            <p class="mb-0">
                                                <i class="fa fa-tint"/> Humidity: <t t-esc="humidity"/>%
                                            </p>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Info Section -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">About This Workspace</h5>
                                <p class="card-text">
                                    This integrated workspace demonstrates the use of multiple services in a single component.
                                    Both Counter and Weather services are being used simultaneously, showing how services
                                    can be shared across different parts of your application.
                                </p>
                                <div class="alert alert-success mb-0">
                                    <strong>Services Active:</strong> Counter Service and Weather Service
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>