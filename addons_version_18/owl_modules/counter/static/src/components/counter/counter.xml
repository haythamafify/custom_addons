<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="counter.Counter">
        <div class="counter-container p-4">
            <div class="card text-center" style="max-width: 400px; margin: 0 auto;">
                <div class="card-header bg-primary text-white">
                    <h3>Counter Application</h3>
                </div>
                <div class="card-body">
                    <h1 class="display-1 my-4"><t t-esc="state.counter"/></h1>
                    <div class="btn-group" role="group">
                        <button class="btn btn-danger btn-lg" t-on-click="decrement">
                            <i class="fa fa-minus"/> -1
                        </button>
                        <button class="btn btn-secondary btn-lg" t-on-click="reset">
                            <i class="fa fa-refresh"/> Reset
                        </button>
                        <button class="btn btn-success btn-lg" t-on-click="increment">
                            <i class="fa fa-plus"/> +1
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>