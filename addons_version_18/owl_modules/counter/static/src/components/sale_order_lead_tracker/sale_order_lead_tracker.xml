<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="counter.SaleOrderLeadTracker">
        <div class="container-fluid mt-4" style="max-height: calc(100vh - 100px); overflow-y: auto;">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Sale Orders - Lead Performance Tracker</h4>
                    <button 
                        class="btn btn-light btn-sm" 
                        t-on-click="refreshOrders"
                        t-att-disabled="state.loading">
                        <i class="fa fa-refresh"></i>
                        Refresh
                    </button>
                </div>
                
                <div class="card-body">
                    <div t-if="state.loading" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Loading sale orders...</p>
                    </div>

                    <div t-else="">
                        <div t-if="state.saleOrders.length === 0" class="alert alert-info">
                            <i class="fa fa-info-circle"></i>
                            No sale orders found in the system.
                        </div>

                        <div t-else="" class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Order Number</th>
                                        <th>Customer</th>
                                        <th>State</th>
                                        <th>Amount</th>
                                        <th>Opportunity</th>
                                        <th>Probability</th>
                                        <th>Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="state.saleOrders" t-as="order" t-key="order.id">
                                        <td>
                                            <strong><t t-esc="order.name"/></strong>
                                        </td>
                                        <td>
                                            <t t-esc="order.partner_id[1]"/>
                                        </td>
                                        <td>
                                            <span t-att-class="'badge bg-' + (order.state === 'sale' ? 'success' : order.state === 'draft' ? 'secondary' : 'warning')">
                                                <t t-esc="formatState(order.state)"/>
                                            </span>
                                        </td>
                                        <td>
                                            <t t-esc="order.amount_total.toFixed(2)"/>
                                        </td>
                                        <td>
                                            <t t-if="order.opportunity_id">
                                                <t t-esc="order.opportunity_id[1]"/>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted">No Opportunity</span>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-if="order.opportunity_id">
                                                <span t-att-class="'badge ' + (order.probability > 50 ? 'bg-success' : order.probability > 25 ? 'bg-warning' : 'bg-danger')">
                                                    <t t-esc="order.probability"/>%
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted">N/A</span>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-set="message" t-value="getMessageForOrder(order)"/>
                                            <t t-if="message">
                                                <div t-att-class="'alert alert-' + message.class + ' mb-0 py-2 px-3'">
                                                    <strong><t t-esc="message.text"/></strong>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted">-</span>
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="alert alert-light">
                                <h6 class="mb-2">Legend:</h6>
                                <ul class="mb-0">
                                    <li><span class="text-success fw-bold">Well Done!</span> - Order state is 'sale' (confirmed)</li>
                                    <li><span class="text-danger fw-bold">You can do better!</span> - Order not confirmed but opportunity probability is above 50%</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mt-2">
                            <small class="text-muted">
                                Total Orders: <strong><t t-esc="state.saleOrders.length"/></strong>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>

