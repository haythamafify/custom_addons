<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add button to stock.picking form view -->
    <record id="view_picking_form_set_quantities" model="ir.ui.view">
        <field name="name">stock.picking.form.set.quantities</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add button in the header (status bar area) -->
            <xpath expr="//header" position="inside">
                <button 
                    name="action_set_quantities_to_demand" 
                    string="Set All to Max"
                    type="object"
                    class="btn-primary"
                    invisible="state != 'assigned'"/>
            </xpath>
        </field>
    </record>
</odoo>