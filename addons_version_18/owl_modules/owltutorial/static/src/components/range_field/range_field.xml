<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.RangeField" owl="1">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold text-primary" style="font-size: 1.2rem;">
                    <t t-esc="this.state.range"/>
                </span>
                <span class="text-muted badge bg-light text-dark" t-if="this.currency">
                    <t t-esc="this.currency"/>
                </span>
            </div>
            <input 
                type="range" 
                class="form-range" 
                min="100" 
                max="10000" 
                step="100" 
                t-on-input="(ev) => {this.state.range = ev.target.value; this.update(ev.target.value)}"
                t-att-value="this.state.range"
            />
            <small class="text-muted text-center">100 - 10000</small>
        </div>
    </t>
</templates>