<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.UsernameField" owl="1">
        <div class="input-group d-flex o_username_field">
            <input 
                type="text"
                class="o_input form-control"
                t-att-id="props.id"
                t-att-placeholder="props.placeholder"
                t-att-value="props.value"
                t-att-readonly="props.readonly"
                t-on-input="(ev) => this.update(ev.target.value)"
            />
            <span class="input-group-text border-0 rounded-0">@<span t-esc="this.emailDomain"/></span>
        </div>
    </t>
</templates>