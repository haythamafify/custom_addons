<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.OdooServicesTemplate">
        <!-- Main Container with Full Width -->
        <div t-attf-class="odoo-services-container {{ state.isDark ? 'dark-mode' : '' }}">
            
            <!-- Theme Toggle Button (Fixed) -->
            <button
                class="btn theme-toggle-btn"
                t-attf-class="{{ state.isDark ? 'btn-dark' : 'btn-light' }}"
                t-att-title="toggleButtonLabel"
                t-on-click="toggleTheme"
                type="button">
                <t t-if="state.isDark">üåô</t>
                <t t-else="">‚òÄÔ∏è</t>
            </button>
            
            <Layout display="display">
                <div class="container-fluid">
                    
                    <!-- Header Section -->
                    <div class="text-center services-header mb-3">
                        <h1 class="header-title mb-2">üöÄ Odoo Services</h1>
                        <p class="header-subtitle">Explore and test Odoo core services</p>
                    </div>
                    
                    <!-- Theme Info Section -->
                    <div class="theme-info">
                        <!-- Theme Icon -->
                        <div class="theme-icon">
                            <t t-if="state.isDark">üåô</t>
                            <t t-else="">‚òÄÔ∏è</t>
                        </div>
                        
                        <!-- Theme Display -->
                        <div class="theme-text flex-grow-1 text-start">
                            <h4 class="mb-1">
                                <t t-if="state.isDark">Dark Mode</t>
                                <t t-else="">Light Mode</t>
                            </h4>
                            <small>
                                <t t-esc="themeLabel"/>
                            </small>
                        </div>
                        
                        <!-- Toggle Buttons (L/D) -->
                        <div class="btn-group-theme" role="group">
                            <button 
                                type="button" 
                                t-attf-class="btn {{ state.isDark ? 'btn-outline-secondary' : 'btn-primary' }}"
                                t-on-click="toggleTheme"
                                title="Light Mode">
                                ‚òÄÔ∏è
                            </button>
                            <button 
                                type="button" 
                                t-attf-class="btn {{ state.isDark ? 'btn-primary' : 'btn-outline-secondary' }}"
                                t-on-click="toggleTheme"
                                title="Dark Mode">
                                üåô
                            </button>
                        </div>
                    </div>
                    
                    <!-- Services Grid -->
                    <div class="row g-4 services-grid">
                        
                        <!-- Notification Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                                        <i class="bi bi-bell-fill text-white"></i>
                                    </div>
                                    <h5 class="card-title">Notification Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Send beautiful notifications with actions to users
                                    </p>
                                    <button 
                                        class="btn btn-success btn-lg service-btn w-100" 
                                        t-on-click="showNotification">
                                        <i class="bi bi-bell me-2"></i>
                                        Test Notification
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Dialog Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                                        <i class="bi bi-chat-square-text-fill text-white"></i>
                                    </div>
                                    <h5 class="card-title">Dialog Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Show confirmation dialogs and get user responses
                                    </p>
                                    <button 
                                        class="btn btn-warning btn-lg service-btn w-100" 
                                        t-on-click="showDialog">
                                        <i class="bi bi-chat-square-text me-2"></i>
                                        Open Dialog
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Effect Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);">
                                        <i class="bi bi-stars text-white"></i>
                                    </div>
                                    <h5 class="card-title">Effect Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Add special visual effects and animations
                                    </p>
                                    <button 
                                        class="btn btn-info btn-lg service-btn w-100" 
                                        t-on-click="showEffect">
                                        <i class="bi bi-stars me-2"></i>
                                        Run Effect
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- HTTP GET Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                                        <i class="bi bi-cloud-arrow-down-fill text-white"></i>
                                    </div>
                                    <h5 class="card-title">HTTP GET Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Fetch data from external APIs using GET requests
                                    </p>
                                    <button 
                                        class="btn btn-lg service-btn w-100" 
                                        t-on-click="gethttpService"
                                        style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); border: none; color: white;">
                                        <i class="bi bi-cloud-arrow-down me-2"></i>
                                        Test HTTP GET
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- HTTP POST Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);">
                                        <i class="bi bi-cloud-arrow-up-fill text-white"></i>
                                    </div>
                                    <h5 class="card-title">HTTP POST Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Send data to external APIs using POST requests
                                    </p>
                                    <button 
                                        class="btn btn-lg service-btn w-100" 
                                        t-on-click="posthttpService"
                                        style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); border: none; color: white;">
                                        <i class="bi bi-cloud-arrow-up me-2"></i>
                                        Test HTTP POST
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- RPC Service Card -->

                            <div class="col-lg-4 col-md-6 col-service">
                                <div class="card h-100 text-center service-card">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                        <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                                            <i class="bi bi-diagram-3-fill text-white"></i>
                                        </div>
                                        <h5 class="card-title">RPC Service</h5>
                                        <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                            Call Odoo backend methods directly from JavaScript
                                        </p>
                                        <button 
                                            class="btn btn-primary btn-lg service-btn w-100" 
                                            t-on-click="getRpcService">
                                            <i class="bi bi-diagram-3 me-2"></i>
                                            Test RPC Call
                                        </button>
                                    </div>
                                 
                                </div>
                            </div>


                    </div>

                    <!-- ORM Service Card -->
                        <div class="col-lg-4 col-md-6 col-service">
                            <div class="card h-100 text-center service-card">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
                                    <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);">
                                        <i class="bi bi-database-fill text-white"></i>
                                    </div>
                                    <h5 class="card-title">ORM Service</h5>
                                    <p class="text-muted mb-4" style="font-size: 0.95rem;">
                                        Direct database access using Odoo ORM from frontend
                                    </p>
                                    <button 
                                        class="btn btn-lg service-btn w-100" 
                                        t-on-click="getOrmService"
                                        style="background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white;">
                                        <i class="bi bi-database me-2"></i>
                                        Test ORM Call
                                    </button>
                                </div>
                            </div>
                        </div>


                    <!-- GET Data Table Section -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="card shadow-sm" t-if="state.get_http_data and state.get_http_data.products">
                                <div class="card-header" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                                    <h4 class="mb-0 text-white">
                                        <i class="bi bi-table me-2"></i>
                                        Products List (<t t-esc="state.get_http_data.products.length"/> items)
                                    </h4>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Title</th>
                                                    <th>Price</th>
                                                    <th>Category</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="state.get_http_data.products" t-as="product" t-key="product.id">
                                                    <tr>
                                                        <td><t t-esc="product.id"/></td>
                                                        <td><t t-esc="product.title"/></td>
                                                        <td class="text-success fw-bold">$<t t-esc="product.price"/></td>
                                                        <td><span class="badge bg-secondary"><t t-esc="product.category"/></span></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- POST Data Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card shadow-sm" t-if="state.post_http_data">
                                <div class="card-header" style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);">
                                    <h4 class="mb-0 text-white">
                                        <i class="bi bi-check-circle me-2"></i>
                                        POST Response
                                    </h4>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 30%;">Property</th>
                                                <th>Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="fw-bold">ID</td>
                                                <td><span class="badge bg-primary"><t t-esc="state.post_http_data.id"/></span></td>
                                            </tr>
                                            <tr>
                                                <td class="fw-bold">Title</td>
                                                <td><t t-esc="state.post_http_data.title"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- RPC Data Table Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card shadow-sm" t-if="state.rpc_data and state.rpc_data.length">
                                <div class="card-header" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                                    <h4 class="mb-0 text-white">
                                        <i class="bi bi-people-fill me-2"></i>
                                        Partners List (<t t-esc="state.rpc_data.length"/> records)
                                    </h4>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="state.rpc_data" t-as="partner" t-key="partner.id">
                                                    <tr>
                                                        <td><span class="badge bg-primary"><t t-esc="partner.id"/></span></td>
                                                        <td><t t-esc="partner.name"/></td>
                                                        <td>
                                                            <t t-if="partner.email">
                                                                <i class="bi bi-envelope me-1"></i>
                                                                <t t-esc="partner.email"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">N/A</span>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="partner.phone">
                                                                <i class="bi bi-telephone me-1"></i>
                                                                <t t-esc="partner.phone"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">N/A</span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ORM Data Table Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card shadow-sm" t-if="state.orm_data and state.orm_data.length">
                                <div class="card-header" style="background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);">
                                    <h4 class="mb-0 text-white">
                                        <i class="bi bi-database-fill me-2"></i>
                                        Partners List (<t t-esc="state.orm_data.length"/> records)
                                    </h4>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped mb-0">
                                            <thead class="table-light text-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="state.orm_data" t-as="partner" t-key="partner.id">
                                                    <tr>
                                                        <td><span class="badge bg-warning"><t t-esc="partner.id"/></span></td>
                                                        <td><strong><t t-esc="partner.name"/></strong></td>
                                                        <td>
                                                            <t t-if="partner.email">
                                                                <i class="bi bi-envelope me-1 text-primary"></i>
                                                                <t t-esc="partner.email"/>
                                                            </t>
                                                            <t t-else="">‚Äî</t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </Layout>
        </div>
    </t>
</templates>
