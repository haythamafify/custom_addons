<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!-- استخدام web.FormView كقالب أب -->
    <t t-inherit="web.FormView" t-inherit-mode="extension" owl="1">
       
        <!-- إضافة الزر في شريط الأزرار -->
        <xpath expr="//button[hasclass('o_form_button_create')]" position="after">
            <button class="btn btn-primary" 
                    t-on-click="()=>this.openWebsite(model.root.data.website)"
                    t-if="model.root.data.website">
                <i class="fa fa-globe me-1"/> Go to Website
            </button>
        </xpath>
    </t>
</templates>