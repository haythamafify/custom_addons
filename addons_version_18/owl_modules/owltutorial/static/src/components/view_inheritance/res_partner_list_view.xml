<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="owl.ResPartnerListView" t-inherit="web.ListView" t-inherit-mode="extension">
        <xpath expr="//Layout" position="inside">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary me-2" t-on-click="() => this.openSalesView()">
                    View Sales Orders
                </button>
                <button class="btn btn-secondary border me-2" t-on-click="() => this.openInvoicesView()">
                    View Invoices
                </button>
                <button class="btn btn-success" t-on-click="() => this.openMeetingsView()">
                    View Meetings
                </button>
            </t>
        </xpath>
    </t>
</templates>