<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve" owl="1">
    <t t-name="owl.OdooDashboardTemplate">
        <Layout>
            <div class="owl-dashboard container-fluid py-4 overflow-auto" style="max-height: calc(100vh - 100px);">
                <!-- Header -->
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-body py-4 px-4">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6">
                                <h5 class="card-title mb-1">
                                    <i class="bi bi-gear me-2"></i>Control Panel
                                </h5>
                                <p class="card-text text-muted small mb-0">System Overview &amp; Management</p>
                            </div>
                            <div class="col-12 col-md-6 text-md-end mt-2 mt-md-0">
                                <span class="badge bg-success me-2">
                                    <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>System Online
                                </span>
                                <span class="text-muted small">
                                    <i class="bi bi-clock me-1"></i>
                                    <t t-esc="state.lastUpdate || 'Loading...'" />
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <!-- Basic Services Card -->
                    <div class="col-12 col-lg-6">
                        <div class="card h-100 shadow-sm border-0 dash-card">
                            <div class="card-header bg-primary text-white d-flex align-items-center py-3">
                                <i class="bi bi-cpu me-2"></i>
                                <div>
                                    <h6 class="mb-0">Basic Services</h6>
                                    <small class="opacity-75">System Properties &amp; Functions</small>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive overflow-auto dash-table-scroll">
                                    <table class="table table-striped table-hover mb-0">
                                        <thead class="table-primary sticky-top">
                                            <tr>
                                                <th>Property</th>
                                                <th>Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><i class="bi bi-tag me-2 text-primary"></i>String</td>
                                                <td><code class="bg-light px-2 py-1 rounded" t-esc="getowl_basicService.string" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-check-circle me-2 text-success"></i>Boolean</td>
                                                <td><span class="badge bg-success" t-esc="getowl_basicService.boolean" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-hash me-2 text-info"></i>Integer</td>
                                                <td><code class="bg-light px-2 py-1 rounded" t-esc="getowl_basicService.integer" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-percent me-2 text-warning"></i>Float</td>
                                                <td><code class="bg-light px-2 py-1 rounded" t-esc="getowl_basicService.float" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-list me-2 text-secondary"></i>Array</td>
                                                <td><code class="bg-warning bg-opacity-25 px-2 py-1 rounded" t-esc="getowl_basicService.array ? getowl_basicService.array.join(', ') : 'N/A'" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-box me-2"></i>Object</td>
                                                <td><code class="bg-light px-2 py-1 rounded small" t-esc="stringifyObject(getowl_basicService.object)" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-play-circle me-2 text-primary"></i>Function</td>
                                                <td>
                                                    <button t-on-click="getowl_basicService.function" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-play me-1"></i>Call Function
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-code me-2 text-info"></i>normal_function</td>
                                                <td><code class="bg-info bg-opacity-25 px-2 py-1 rounded" t-esc="getowl_basicService.normal_function()" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-arrow-right me-2 text-info"></i>arrow_function</td>
                                                <td><code class="bg-info bg-opacity-25 px-2 py-1 rounded" t-esc="getowl_basicService.arrow_function()" /></td>
                                            </tr>
                                            <tr>
                                                <td><i class="bi bi-code-slash me-2 text-danger"></i>html</td>
                                                <td t-out="getowl_basicService.html" />
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dashboard Service Card -->
                    <div class="col-12 col-lg-6">
                        <div class="card h-100 shadow-sm border-0 dash-card">
                            <div class="card-header bg-success text-white d-flex align-items-center justify-content-between flex-wrap py-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-graph-up me-2"></i>
                                    <div>
                                        <h6 class="mb-0">Dashboard Service</h6>
                                        <small class="opacity-75">Real-time Statistics</small>
                                    </div>
                                </div>
                                <button t-att-disabled="state.isLoading" t-on-click="refreshData" class="btn btn-light btn-sm mt-1 mt-md-0">
                                    <i t-att-class="state.isLoading ? 'bi-arrow-repeat dash-spin' : 'bi-arrow-clockwise'" class="bi me-1" />
                                    <span t-if="!state.isLoading">تحديث</span>
                                    <span t-if="state.isLoading">جاري...</span>
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-6 col-md-3">
                                        <div class="card bg-light border-0 dash-stat-card shadow-sm">
                                            <div class="card-body py-3 text-center">
                                                <i class="bi bi-people text-primary"></i>
                                                <small class="text-muted d-block text-nowrap">Partners</small>
                                                <div class="fw-bold" t-esc="state.dashboardData.Partners || 0" />
                                                <small class="text-success">+12%</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="card bg-light border-0 dash-stat-card shadow-sm">
                                            <div class="card-body py-3 text-center">
                                                <i class="bi bi-person text-info"></i>
                                                <small class="text-muted d-block text-nowrap">Customers</small>
                                                <div class="fw-bold" t-esc="state.dashboardData.Customers || 0" />
                                                <small class="text-success">+5%</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="card bg-light border-0 dash-stat-card shadow-sm">
                                            <div class="card-body py-3 text-center">
                                                <i class="bi bi-person-badge text-warning"></i>
                                                <small class="text-muted d-block text-nowrap">Individuals</small>
                                                <div class="fw-bold" t-esc="state.dashboardData.Individuals || 0" />
                                                <small class="text-danger">-2%</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="card bg-light border-0 dash-stat-card shadow-sm">
                                            <div class="card-body py-3 text-center">
                                                <i class="bi bi-geo-alt text-success"></i>
                                                <small class="text-muted d-block text-nowrap">Locations</small>
                                                <div class="fw-bold" t-esc="state.dashboardData.Locations || 0" />
                                                <small class="text-success">+8%</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Simple Mail Service Card -->
                    <div class="col-12">
                        <div class="card bg-info text-white border-0 shadow-sm dash-mail-card">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-envelope display-4 mb-3 opacity-75"></i>
                                <h5 class="card-title">Send Emails Quickly</h5>
                                <p class="card-text opacity-90 mb-3">Use the Simple Mail Service for fast and reliable email delivery</p>
                                <button class="btn btn-light" t-on-click="openSimpleMail">
                                    <i class="bi bi-send me-2"></i>Open Simple Mail
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Layout>
    </t>
</templates>
