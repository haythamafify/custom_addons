<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve" owl="1">
    <t t-name="owl.OdooDashboardTemplate">
        <Layout>
            <div class="container-fluid p-0">
                <div class="row g-4 m-0">
                    <!-- Basic Services Card - LEFT SIDE -->
                    <div class="col-12 col-md-6 p-3">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-primary text-white">
                                <h2 class="card-title mb-0 h4">Basic Services</h2>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover mb-0 align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col" class="ps-4 py-3">Property</th>
                                                <th scope="col" class="py-3">Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row" class="ps-4">String</th>
                                                <td t-esc="getowl_basicService.string" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Boolean</th>
                                                <td t-esc="getowl_basicService.boolean" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Integer</th>
                                                <td t-esc="getowl_basicService.integer" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Float</th>
                                                <td t-esc="getowl_basicService.float" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Array</th>
                                                <td t-esc="getowl_basicService.array ? getowl_basicService.array.join(', ') : 'N/A'" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Object</th>
                                                <td t-esc="stringifyObject(getowl_basicService.object)" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Function</th>
                                                <td>
                                                    <button t-on-click="getowl_basicService.function" class="btn btn-sm btn-primary">Call Function</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">normal_function</th>
                                                <td t-esc="getowl_basicService.normal_function()" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">arrow_function</th>
                                                <td t-esc="getowl_basicService.arrow_function()" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">html</th>
                                                <td t-out="getowl_basicService.html" />
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Dashboard Service Card - RIGHT SIDE -->
                    <div class="col-12 col-md-6 p-3">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                <h2 class="card-title mb-0 h4">Dashboard Service</h2>
                                <!-- ✅ Refresh Button + Last Update -->
                                <div class="d-flex align-items-center gap-2">
                                    <small t-if="state.lastUpdate" class="text-white-50">
                                        آخر تحديث:
                                        <t t-esc="state.lastUpdate" />
                                    </small>
                                    <button t-att-disabled="state.isLoading" t-on-click="refreshData" class="btn btn-sm btn-light">
                                        <i t-att-class="{'fa-spin': state.isLoading}" class="fa fa-refresh" />
                                        <span t-if="!state.isLoading">تحديث</span>
                                        <span t-if="state.isLoading">جاري...</span>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Partners -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-users" style="font-size: 50px; color: #6c757d;" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Partners</h5>
                                        <h2 t-esc="state.dashboardData.Partners || 0" class="mb-0 text-primary fw-bold" />
                                    </div>
                                </div>
                                <!-- Customers -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-user" style="font-size: 50px; color: #6c757d;" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Customers</h5>
                                        <h2 t-esc="state.dashboardData.Customers || 0" class="mb-0 text-primary fw-bold" />
                                    </div>
                                </div>
                                <!-- Individuals -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-user" style="font-size: 50px; color: #6c757d;" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Individuals</h5>
                                        <h2 t-esc="state.dashboardData.Individuals || 0" class="mb-0 text-primary fw-bold" />
                                    </div>
                                </div>
                                <!-- Locations -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-map-marker" style="font-size: 50px; color: #6c757d;" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Locations</h5>
                                        <h2 t-esc="state.dashboardData.Locations || 0" class="mb-0 text-primary fw-bold" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Simple Mail Service Card - BOTTOM -->
                    <div class="col-12 p-3">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-info text-white">
                                <h2 class="card-title mb-0 h4">Simple Mail Service</h2>
                            </div>
                            <div class="card-body text-center">
                                <p class="mb-3">Send emails quickly using the Simple Mail Service</p>
                                <button class="btn btn-primary btn-lg" t-on-click="openSimpleMail">
                                    <i class="fa fa-envelope me-2"></i>Open Simple Mail
                                </button>
                            </div>
                        </div>
                    </div>
                


               
                </div>
            </div>
        </Layout>
    </t>
</templates>
