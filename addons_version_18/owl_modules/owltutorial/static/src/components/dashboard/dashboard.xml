<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve" owl="1">
    <t t-name="owl.OdooDashboardTemplate">
        <Layout>
            <div class="container-fluid p-0">
                <div class="row g-4 m-0">
                    
                    <!-- Basic Services Card - LEFT SIDE -->
                    <div class="col-12 col-md-6 p-3">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-primary text-white">
                                <h2 class="card-title mb-0 h4">Basic Services</h2>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover mb-0 align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col" class="ps-4 py-3">Property</th>
                                                <th scope="col" class="py-3">Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row" class="ps-4">String</th>
                                                <td t-esc="getowl_basicService.string" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Boolean</th>
                                                <td t-esc="getowl_basicService.boolean" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Integer</th>
                                                <td t-esc="getowl_basicService.integer" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Float</th>
                                                <td t-esc="getowl_basicService.float" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Array</th>
                                                <td t-esc="getowl_basicService.array ? getowl_basicService.array.join(', ') : 'N/A'" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Object</th>
                                                <td t-esc="stringifyObject(getowl_basicService.object)" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">Function</th>
                                                <td>
                                                    <button t-on-click="getowl_basicService.function" class="btn btn-sm btn-primary">
                                                        Call Function
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">normal_function</th>
                                                <td t-esc="getowl_basicService.normal_function()" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">arrow_function</th>
                                                <td t-esc="getowl_basicService.arrow_function()" />
                                            </tr>
                                            <tr>
                                                <th scope="row" class="ps-4">html</th>
                                                <td t-out="getowl_basicService.html" />
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dashboard Service Card - RIGHT SIDE -->
                    <div class="col-12 col-md-6 p-3">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-success text-white">
                                <h2 class="card-title mb-0 h4">Dashboard Service</h2>
                            </div>
                            <div class="card-body">
                                
                                <!-- Partners -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-users" style="font-size: 50px; color: #6c757d;"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Partners</h5>
                                        <h2 class="mb-0 text-primary fw-bold" t-esc="dashboardData.Partners || 0" />
                                    </div>
                                </div>

                                <!-- Customers -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-user" style="font-size: 50px; color: #6c757d;"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Customers</h5>
                                        <h2 class="mb-0 text-primary fw-bold" t-esc="dashboardData.Customers || 0" />
                                    </div>
                                </div>

                                <!-- Individuals -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-user" style="font-size: 50px; color: #6c757d;"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Individuals</h5>
                                        <h2 class="mb-0 text-primary fw-bold" t-esc="dashboardData.Individuals || 0" />
                                    </div>
                                </div>

                                <!-- Locations -->
                                <div class="d-flex flex-row p-3 mb-3 border rounded align-items-center">
                                    <div class="me-4">
                                        <i class="fa fa-map-marker" style="font-size: 50px; color: #6c757d;"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 text-muted">Locations</h5>
                                        <h2 class="mb-0 text-primary fw-bold" t-esc="dashboardData.Locations || 0" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </Layout>
    </t>
</templates>