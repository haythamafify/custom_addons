<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- list View for OWL Todo List -->
        <record id="owl_todo_list_list_view" model="ir.ui.view">
            <field name="name">owl.todo.list.list</field>
            <field name="model">owl.todo.list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="completed"/>
                    <field name="color"/>
                </list>
            </field>
        </record>

        <!-- Form View for OWL Todo List -->
        <record id="owl_todo_list_form_view" model="ir.ui.view">
            <field name="name">owl.todo.list.form</field>
            <field name="model">owl.todo.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="completed"/>
                            <field name="color" widget="color"/>
                        </group>
                    </sheet>
          
                        <chatter/>
                </form>
            </field>
        </record>

        <!-- Action for OWL Todo List -->
        <record id="owl_todo_list_action" model="ir.actions.act_window">
            <field name="name">Todo List</field>
            <field name="res_model">owl.todo.list</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first todo task!
                </p>
            </field>
        </record>
   <!-- Menu for OWL main menu -->
    <menuitem
    id="owl_todo_list_main_menu"
    name="OWL Tutorial"
    sequence="10"/>
        <!-- Menu for OWL Todo List -->

        <menuitem
            id="owl_todo_list_menu"
            name="Todo List"
            action="owl_todo_list_action"
            parent="owl_todo_list_main_menu"
            sequence="10"/>
        <!-- Client Action -->
        <record id="owl_todo_list_client_action" model="ir.actions.client">
            <field name="name">Todo List OWL</field>
            <field name="tag">owl.todo_list_action</field>
        </record>

               <menuitem
            id="owl_todo_list_menu_owl_js"
            name="Todo List Owl"
            action="owl_todo_list_client_action"
            parent="owl_todo_list_main_menu"
            sequence="10"/>
    </data>
</odoo>
