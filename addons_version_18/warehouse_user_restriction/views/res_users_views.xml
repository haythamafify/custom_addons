<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_warehouse_restriction" model="ir.ui.view">
        <field name="name">res.users.form.warehouse.restriction</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Warehouse Restrictions" groups="warehouse_user_restriction.group_warehouse_restriction_manager,base.group_system">
                    <field
                        name="warehouse_ids"
                        widget="many2many_tags"
                        options="{'no_create_edit': True}"
                        domain="[('company_id', 'in', company_ids)]"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
