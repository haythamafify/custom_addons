<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_properties" name="Portal My Home: Properties"
              inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/web_portal/static/src/img/property.svg'"/>
                <t t-set="title">Properties</t>
                <t t-set="url" t-value="'/my/properties'"/>
                <t t-set="text">Follow, view or manage your properties</t>
                <t t-set="placeholder_count" t-value="'property_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties_breadcrumbs" name="Portal My Properties Breadcrumbs"
              inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'properties'" class="breadcrumb-item active">
                Properties
            </li>
            <li t-if="page_name == 'property'" class="breadcrumb-item active">
                <a t-attf-href="/my/properties?{{ keep_query() }}">Properties</a>
                / <t t-esc="property.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_properties" name="Portal My Properties">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <h3>My Properties</h3>

                <t t-if="properties">
                    <table class="table table-hover o_portal_my_docs">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Reference</th>
                                <th>State</th>
                                <th>Expected Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="properties" t-as="property">
                                <tr>
                                    <td>
                                        <a t-att-href="'/my/properties/%s' % property.id">
                                            <t t-esc="property.name"/>
                                        </a>
                                    </td>
                                    <td><t t-esc="property.ref"/></td>
                                    <td><t t-esc="property.state"/></td>
                                    <td><t t-esc="property.expected_price"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="pager and pager.get('page_count', 1) &gt; 1">
                        <div class="d-flex align-items-center justify-content-end mt-3">
                            <nav aria-label="Properties navigation">
                                <ul class="pagination mb-0">
                                    <li t-att-class="'page-item%s' % ('' if prev_url else ' disabled')">
                                        <a class="page-link" t-att-href="prev_url">Previous</a>
                                    </li>
                                    <t t-foreach="page_links" t-as="p">
                                        <li t-att-class="'page-item%s' % (' active' if p.get('num') == pager.get('page') else '')">
                                            <a class="page-link" t-att-href="p.get('url')">
                                                <t t-esc="p.get('num')"/>
                                            </a>
                                        </li>
                                    </t>
                                    <li t-att-class="'page-item%s' % ('' if next_url else ' disabled')">
                                        <a class="page-link" t-att-href="next_url">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="alert alert-info">No properties found.</div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_property" name="Portal My Property">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <h3><t t-esc="property.name"/></h3>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Reference</th>
                                <td><t t-esc="property.ref"/></td>
                            </tr>
                            <tr>
                                <th>State</th>
                                <td><t t-esc="property.state"/></td>
                            </tr>
                            <tr>
                                <th>Available From</th>
                                <td><t t-esc="property.date_availability"/></td>
                            </tr>
                            <tr>
                                <th>Expected Selling</th>
                                <td><t t-esc="property.expected_date_selling"/></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Expected Price</th>
                                <td><t t-esc="property.expected_price"/></td>
                            </tr>
                            <tr>
                                <th>Selling Price</th>
                                <td><t t-esc="property.selling_price"/></td>
                            </tr>
                            <tr>
                                <th>Bedrooms</th>
                                <td><t t-esc="property.bedrooms"/></td>
                            </tr>
                            <tr>
                                <th>Living Area</th>
                                <td><t t-esc="property.living_area"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
