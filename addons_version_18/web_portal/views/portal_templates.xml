<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_properties" name="Portal My Home: Properties"
              inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/web_portal/static/src/img/property.svg'"/>
                <t t-set="title">Properties</t>
                <t t-set="url" t-value="'/my/properties'"/>
                <t t-set="text">Follow, view or manage your properties</t>
                <t t-set="count" t-value="property_count"/>
                <t t-set="placeholder_count" t-value="'property_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties_breadcrumbs" name="Portal My Properties Breadcrumbs"
              inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <t t-if="breadcrumbs">
                <t t-foreach="breadcrumbs" t-as="crumb">
                    <li t-att-class="'breadcrumb-item%s' % (' active' if crumb.get('active') else '')">
                        <t t-if="crumb.get('url')">
                            <a t-att-href="crumb.get('url')">
                                <t t-esc="crumb.get('name')"/>
                            </a>
                        </t>
                        <t t-else="">
                            <t t-esc="crumb.get('name')"/>
                        </t>
                    </li>
                </t>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties" name="Portal My Properties">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <h3>My Properties</h3>

                <t t-if="properties">
                    <div class="d-flex flex-wrap align-items-center justify-content-between mb-2 gap-2">
                        <form method="get" action="/my/properties" class="d-flex align-items-center gap-2">
                            <input type="text" name="search" class="form-control form-control-sm"
                                   placeholder="Search..." t-att-value="search"/>
                            <button type="submit" class="btn btn-sm btn-primary">Search</button>
                            <t t-if="sortby">
                                <input type="hidden" name="sortby" t-att-value="sortby"/>
                            </t>
                            <t t-if="groupby">
                                <input type="hidden" name="groupby" t-att-value="groupby"/>
                            </t>
                        </form>
                        <div class="d-flex align-items-center gap-2">
                            <form method="get" action="/my/properties" class="d-flex align-items-center">
                                <label class="mb-0 me-2 text-muted">Sort by</label>
                                <select name="sortby" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                                    <t t-foreach="sort_options" t-as="option">
                                        <option t-att-value="option['key']"
                                                t-att-selected="option['key'] == sortby">
                                            <t t-esc="option['label']"/>
                                        </option>
                                    </t>
                                </select>
                                <t t-if="search">
                                    <input type="hidden" name="search" t-att-value="search"/>
                                </t>
                                <t t-if="groupby">
                                    <input type="hidden" name="groupby" t-att-value="groupby"/>
                                </t>
                            </form>
                            <form method="get" action="/my/properties" class="d-flex align-items-center">
                                <label class="mb-0 me-2 text-muted">Group by</label>
                                <select name="groupby" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                                    <t t-foreach="group_options" t-as="option">
                                        <option t-att-value="option['key']"
                                                t-att-selected="option['key'] == groupby">
                                            <t t-esc="option['label']"/>
                                        </option>
                                    </t>
                                </select>
                                <t t-if="search">
                                    <input type="hidden" name="search" t-att-value="search"/>
                                </t>
                                <t t-if="sortby">
                                    <input type="hidden" name="sortby" t-att-value="sortby"/>
                                </t>
                            </form>
                            <a class="btn btn-sm btn-success" t-att-href="export_url">
                                Export Excel
                            </a>
                            <a class="btn btn-sm btn-outline-primary" href="/my/properties/new">
                                Create Property
                            </a>
                        </div>
                    </div>
                    <t t-if="grouped_properties">
                        <t t-foreach="grouped_properties" t-as="group">
                            <div class="mt-3 mb-1 fw-semibold text-muted">
                                <t t-esc="group['label']"/>
                            </div>
                            <table class="table table-hover o_portal_my_docs">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Reference</th>
                                        <th>State</th>
                                        <th>Expected Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="group['records']" t-as="property">
                                        <tr>
                                            <td>
                                                <a t-att-href="'/my/properties/%s' % property.id">
                                                    <t t-esc="property.name"/>
                                                </a>
                                            </td>
                                            <td><t t-esc="property.ref"/></td>
                                            <td><t t-esc="property.state"/></td>
                                            <td><t t-esc="property.expected_price"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                    <t t-else="">
                        <table class="table table-hover o_portal_my_docs">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Reference</th>
                                    <th>State</th>
                                    <th>Expected Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="properties" t-as="property">
                                    <tr>
                                        <td>
                                            <a t-att-href="'/my/properties/%s' % property.id">
                                                <t t-esc="property.name"/>
                                            </a>
                                        </td>
                                        <td><t t-esc="property.ref"/></td>
                                        <td><t t-esc="property.state"/></td>
                                        <td><t t-esc="property.expected_price"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="pager and pager.get('page_count', 1) &gt; 1">
                        <div class="d-flex align-items-center justify-content-end mt-3">
                            <nav aria-label="Properties navigation">
                                <ul class="pagination mb-0">
                                    <li t-att-class="'page-item%s' % ('' if prev_url else ' disabled')">
                                        <a class="page-link" t-att-href="prev_url">Previous</a>
                                    </li>
                                    <t t-foreach="page_links" t-as="p">
                                        <li t-att-class="'page-item%s' % (' active' if p.get('num') == pager.get('page') else '')">
                                            <a class="page-link" t-att-href="p.get('url')">
                                                <t t-esc="p.get('num')"/>
                                            </a>
                                        </li>
                                    </t>
                                    <li t-att-class="'page-item%s' % ('' if next_url else ' disabled')">
                                        <a class="page-link" t-att-href="next_url">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="alert alert-info d-flex flex-wrap align-items-center justify-content-between gap-2">
                        <span>No properties found.</span>
                        <a class="btn btn-sm btn-outline-primary" href="/my/properties/new">
                            Create Property
                        </a>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_property" name="Portal My Property">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-2">
                    <h3 class="mb-0">
                        <t t-esc="property.name"/>
                    </h3>
                    <div class="d-flex flex-wrap gap-2">
                        <a class="btn btn-sm btn-outline-primary"
                           t-att-href="'/my/properties/%s/edit' % property.id">
                            Edit
                        </a>
                        <a class="btn btn-sm btn-primary"
                           t-att-href="'/my/properties/%s/report' % property.id">
                            Download PDF
                        </a>
                        <a class="btn btn-sm btn-success"
                           t-att-href="'/my/properties/%s/xlsx_report' % property.id">
                            Download Excel
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Reference</th>
                                <td><t t-esc="property.ref"/></td>
                            </tr>
                            <tr>
                                <th>State</th>
                                <td><t t-esc="property.state"/></td>
                            </tr>
                            <tr>
                                <th>Available From</th>
                                <td><t t-esc="property.date_availability"/></td>
                            </tr>
                            <tr>
                                <th>Expected Selling</th>
                                <td><t t-esc="property.expected_date_selling"/></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Expected Price</th>
                                <td><t t-esc="property.expected_price"/></td>
                            </tr>
                            <tr>
                                <th>Selling Price</th>
                                <td><t t-esc="property.selling_price"/></td>
                            </tr>
                            <tr>
                                <th>Bedrooms</th>
                                <td><t t-esc="property.bedrooms"/></td>
                            </tr>
                            <tr>
                                <th>Living Area</th>
                                <td><t t-esc="property.living_area"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-4">
                    <h4>Chatter Log</h4>
                    <t t-call="portal.message_thread">
                        <t t-set="object" t-value="property"/>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_property_form" name="Portal Property Form">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
                    <h3 class="mb-0">
                        <t t-if="property">Edit Property</t>
                        <t t-else="">Create Property</t>
                    </h3>
                    <a class="btn btn-sm btn-secondary" href="/my/properties">Back to list</a>
                </div>

                <t t-if="errors and errors.get('form')">
                    <div class="alert alert-danger">
                        <t t-esc="errors.get('form')"/>
                    </div>
                </t>

                <form method="post"
                      t-att-action="('/my/properties/%s/edit' % property.id) if property else '/my/properties/new'"
                      class="row g-3">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" class="form-control"
                               t-att-value="values.get('name') or ''" required="required"/>
                        <t t-if="errors and errors.get('name')">
                            <div class="text-danger small mt-1">
                                <t t-esc="errors.get('name')"/>
                            </div>
                        </t>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Postcode</label>
                        <input type="text" name="postcode" class="form-control"
                               t-att-value="values.get('postcode') or ''" required="required"/>
                        <t t-if="errors and errors.get('postcode')">
                            <div class="text-danger small mt-1">
                                <t t-esc="errors.get('postcode')"/>
                            </div>
                        </t>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"><t t-esc="values.get('description') or ''"/></textarea>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label">Expected Price</label>
                        <input type="number" step="0.01" name="expected_price" class="form-control"
                               t-att-value="values.get('expected_price') or 0"/>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Bedrooms</label>
                        <input type="number" name="bedrooms" class="form-control"
                               t-att-value="values.get('bedrooms') or 0"/>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Living Area</label>
                        <input type="number" name="living_area" class="form-control"
                               t-att-value="values.get('living_area') or 0"/>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label">Facades</label>
                        <input type="number" name="facades" class="form-control"
                               t-att-value="values.get('facades') or 0"/>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Expected Selling Date</label>
                        <input type="date" name="expected_date_selling" class="form-control"
                               t-att-value="values.get('expected_date_selling') or ''"/>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Garden Orientation</label>
                        <select name="garden_orientation" class="form-select">
                            <t t-set="go" t-value="values.get('garden_orientation') or 'north'"/>
                            <option value="north" t-att-selected="go == 'north'">North</option>
                            <option value="south" t-att-selected="go == 'south'">South</option>
                            <option value="east" t-att-selected="go == 'east'">East</option>
                            <option value="west" t-att-selected="go == 'west'">West</option>
                            <option value="northeast" t-att-selected="go == 'northeast'">Northeast</option>
                            <option value="southeast" t-att-selected="go == 'southeast'">Southeast</option>
                            <option value="southwest" t-att-selected="go == 'southwest'">Southwest</option>
                            <option value="northwest" t-att-selected="go == 'northwest'">Northwest</option>
                            <option value="no_garden" t-att-selected="go == 'no_garden'">No Garden</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" name="garage"
                                   t-att-checked="values.get('garage') and 'checked' or None"/>
                            <label class="form-check-label">Garage</label>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" name="garden"
                                   t-att-checked="values.get('garden') and 'checked' or None"/>
                            <label class="form-check-label">Garden</label>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Garden Area</label>
                        <input type="number" name="garden_area" class="form-control"
                               t-att-value="values.get('garden_area') or 0"/>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <t t-if="property">Save Changes</t>
                            <t t-else="">Create</t>
                        </button>
                        <a class="btn btn-secondary" href="/my/properties">Cancel</a>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
