<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_properties" name="Portal My Home: Properties"
              inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/web_portal/static/src/img/property.svg'"/>
                <t t-set="title">Properties</t>
                <t t-set="url" t-value="'/my/properties'"/>
                <t t-set="text">Follow, view or manage your properties</t>
                <t t-set="placeholder_count" t-value="'property_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties_breadcrumbs" name="Portal My Properties Breadcrumbs"
              inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <t t-if="breadcrumbs">
                <t t-foreach="breadcrumbs" t-as="crumb">
                    <li t-att-class="'breadcrumb-item%s' % (' active' if crumb.get('active') else '')">
                        <t t-if="crumb.get('url')">
                            <a t-att-href="crumb.get('url')">
                                <t t-esc="crumb.get('name')"/>
                            </a>
                        </t>
                        <t t-else="">
                            <t t-esc="crumb.get('name')"/>
                        </t>
                    </li>
                </t>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties" name="Portal My Properties">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <h3>My Properties</h3>

                <t t-if="properties">
                    <div class="d-flex flex-wrap align-items-center justify-content-between mb-2 gap-2">
                        <form method="get" action="/my/properties" class="d-flex align-items-center gap-2">
                            <input type="text" name="search" class="form-control form-control-sm"
                                   placeholder="Search..." t-att-value="search"/>
                            <button type="submit" class="btn btn-sm btn-primary">Search</button>
                            <t t-if="sortby">
                                <input type="hidden" name="sortby" t-att-value="sortby"/>
                            </t>
                            <t t-if="groupby">
                                <input type="hidden" name="groupby" t-att-value="groupby"/>
                            </t>
                        </form>
                        <div class="d-flex align-items-center gap-2">
                            <form method="get" action="/my/properties" class="d-flex align-items-center">
                                <label class="mb-0 me-2 text-muted">Sort by</label>
                                <select name="sortby" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                                    <t t-foreach="sort_options" t-as="option">
                                        <option t-att-value="option['key']"
                                                t-att-selected="option['key'] == sortby">
                                            <t t-esc="option['label']"/>
                                        </option>
                                    </t>
                                </select>
                                <t t-if="search">
                                    <input type="hidden" name="search" t-att-value="search"/>
                                </t>
                                <t t-if="groupby">
                                    <input type="hidden" name="groupby" t-att-value="groupby"/>
                                </t>
                            </form>
                            <form method="get" action="/my/properties" class="d-flex align-items-center">
                                <label class="mb-0 me-2 text-muted">Group by</label>
                                <select name="groupby" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                                    <t t-foreach="group_options" t-as="option">
                                        <option t-att-value="option['key']"
                                                t-att-selected="option['key'] == groupby">
                                            <t t-esc="option['label']"/>
                                        </option>
                                    </t>
                                </select>
                                <t t-if="search">
                                    <input type="hidden" name="search" t-att-value="search"/>
                                </t>
                                <t t-if="sortby">
                                    <input type="hidden" name="sortby" t-att-value="sortby"/>
                                </t>
                            </form>
                            <a class="btn btn-sm btn-success" t-att-href="export_url">
                                Export Excel
                            </a>
                        </div>
                    </div>
                    <t t-if="grouped_properties">
                        <t t-foreach="grouped_properties" t-as="group">
                            <div class="mt-3 mb-1 fw-semibold text-muted">
                                <t t-esc="group['label']"/>
                            </div>
                            <table class="table table-hover o_portal_my_docs">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Reference</th>
                                        <th>State</th>
                                        <th>Expected Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="group['records']" t-as="property">
                                        <tr>
                                            <td>
                                                <a t-att-href="'/my/properties/%s' % property.id">
                                                    <t t-esc="property.name"/>
                                                </a>
                                            </td>
                                            <td><t t-esc="property.ref"/></td>
                                            <td><t t-esc="property.state"/></td>
                                            <td><t t-esc="property.expected_price"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                    <t t-else="">
                        <table class="table table-hover o_portal_my_docs">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Reference</th>
                                    <th>State</th>
                                    <th>Expected Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="properties" t-as="property">
                                    <tr>
                                        <td>
                                            <a t-att-href="'/my/properties/%s' % property.id">
                                                <t t-esc="property.name"/>
                                            </a>
                                        </td>
                                        <td><t t-esc="property.ref"/></td>
                                        <td><t t-esc="property.state"/></td>
                                        <td><t t-esc="property.expected_price"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="pager and pager.get('page_count', 1) &gt; 1">
                        <div class="d-flex align-items-center justify-content-end mt-3">
                            <nav aria-label="Properties navigation">
                                <ul class="pagination mb-0">
                                    <li t-att-class="'page-item%s' % ('' if prev_url else ' disabled')">
                                        <a class="page-link" t-att-href="prev_url">Previous</a>
                                    </li>
                                    <t t-foreach="page_links" t-as="p">
                                        <li t-att-class="'page-item%s' % (' active' if p.get('num') == pager.get('page') else '')">
                                            <a class="page-link" t-att-href="p.get('url')">
                                                <t t-esc="p.get('num')"/>
                                            </a>
                                        </li>
                                    </t>
                                    <li t-att-class="'page-item%s' % ('' if next_url else ' disabled')">
                                        <a class="page-link" t-att-href="next_url">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="alert alert-info">No properties found.</div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_property" name="Portal My Property">
        <t t-call="portal.portal_layout">
            <div class="o_portal_my_doc">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-2">
                    <h3 class="mb-0">
                        <t t-esc="property.name"/>
                    </h3>
                    <a class="btn btn-sm btn-primary"
                       t-att-href="'/my/properties/%s/report' % property.id">
                        Download PDF
                    </a>
                    <a class="btn btn-sm btn-success"
                       t-att-href="'/my/properties/%s/xlsx_report' % property.id">
                        Download Excel
                    </a>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Reference</th>
                                <td><t t-esc="property.ref"/></td>
                            </tr>
                            <tr>
                                <th>State</th>
                                <td><t t-esc="property.state"/></td>
                            </tr>
                            <tr>
                                <th>Available From</th>
                                <td><t t-esc="property.date_availability"/></td>
                            </tr>
                            <tr>
                                <th>Expected Selling</th>
                                <td><t t-esc="property.expected_date_selling"/></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Expected Price</th>
                                <td><t t-esc="property.expected_price"/></td>
                            </tr>
                            <tr>
                                <th>Selling Price</th>
                                <td><t t-esc="property.selling_price"/></td>
                            </tr>
                            <tr>
                                <th>Bedrooms</th>
                                <td><t t-esc="property.bedrooms"/></td>
                            </tr>
                            <tr>
                                <th>Living Area</th>
                                <td><t t-esc="property.living_area"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-4">
                    <h4>Chatter Log</h4>
                    <t t-call="portal.message_thread">
                        <t t-set="object" t-value="property"/>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
