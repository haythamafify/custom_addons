<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_properties" name="Portal My Home: Properties"
              inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/web_portal/static/src/img/property.svg'"/>
                <t t-set="title">Properties</t>
                <t t-set="url" t-value="'/my/properties'"/>
                <t t-set="text">Follow, view or manage your properties</t>
                <t t-set="placeholder_count" t-value="'property_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_properties" name="Portal My Properties">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs">
                <li class="breadcrumb-item"><a href="/my/home">Home</a></li>
                <li class="breadcrumb-item active">Properties</li>
            </t>

            <div class="o_portal_my_doc">
                <h3>My Properties</h3>

                <t t-if="properties">
                    <table class="table table-hover o_portal_my_docs">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Reference</th>
                                <th>State</th>
                                <th>Expected Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="properties" t-as="property">
                                <tr>
                                    <td>
                                        <a t-att-href="'/my/properties/%s' % property.id">
                                            <t t-esc="property.name"/>
                                        </a>
                                    </td>
                                    <td><t t-esc="property.ref"/></td>
                                    <td><t t-esc="property.state"/></td>
                                    <td><t t-esc="property.expected_price"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="pager and 'page_count' in pager and pager['page_count'] &gt; 1">
                        <nav class="mt-3" aria-label="Properties navigation">
                            <ul class="pagination justify-content-center">
                                <li t-att-class="'page-item%s' % ('' if pager.get('prev_url') else ' disabled')">
                                    <a class="page-link" t-att-href="pager.get('prev_url') or '#'">Previous</a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        Page <t t-esc="pager.get('page', 1)"/> / <t t-esc="pager.get('page_count', 1)"/>
                                    </span>
                                </li>
                                <li t-att-class="'page-item%s' % ('' if pager.get('next_url') else ' disabled')">
                                    <a class="page-link" t-att-href="pager.get('next_url') or '#'">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </t>
                </t>
                <t t-else="">
                    <div class="alert alert-info">No properties found.</div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_property" name="Portal My Property">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs">
                <li class="breadcrumb-item"><a href="/my/home">Home</a></li>
                <li class="breadcrumb-item"><a href="/my/properties">Properties</a></li>
                <li class="breadcrumb-item active"><t t-esc="property.name"/></li>
            </t>

            <div class="o_portal_my_doc">
                <h3><t t-esc="property.name"/></h3>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Reference</th>
                                <td><t t-esc="property.ref"/></td>
                            </tr>
                            <tr>
                                <th>State</th>
                                <td><t t-esc="property.state"/></td>
                            </tr>
                            <tr>
                                <th>Available From</th>
                                <td><t t-esc="property.date_availability"/></td>
                            </tr>
                            <tr>
                                <th>Expected Selling</th>
                                <td><t t-esc="property.expected_date_selling"/></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12 col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Expected Price</th>
                                <td><t t-esc="property.expected_price"/></td>
                            </tr>
                            <tr>
                                <th>Selling Price</th>
                                <td><t t-esc="property.selling_price"/></td>
                            </tr>
                            <tr>
                                <th>Bedrooms</th>
                                <td><t t-esc="property.bedrooms"/></td>
                            </tr>
                            <tr>
                                <th>Living Area</th>
                                <td><t t-esc="property.living_area"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
