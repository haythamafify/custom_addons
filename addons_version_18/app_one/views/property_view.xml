<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="property_tree_view" model="ir.ui.view">
        <field name="name">property.tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list class="property-tree" decoration-danger="is_late">
                <header>
                    <button type="object"
                            string="Export to Excel"
                            name="generate_property_excel_report"
                            class="btn-primary"
                            icon="fa-file-excel-o"/>

                </header>


                <field name="ref"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date_availability"/>
                <field name="expected_date_selling"/>
                <field name="selling_price"/>
                <field name="expected_price"/>
                <field name="diff"/>
                <field name="bedrooms"/>
                <field name="state"/>
                <field name="owner_id"/>
                <field name="is_late" invisible="1"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <button name="get_properties_api" type="object" class="btn-primary" string="test api"/>
                    <!-- ✅ زر فتح الويزرد - مخفي للحالة closed -->
                    <button name="action_open_change_wizard"
                            type="object"
                            string="Update with Reason"
                            class="oe_highlight"
                            invisible="state == 'closed'"
                            icon="fa-pencil"
                            help="Modify property fields with documented reason"/>

                    <button name="action_draft" type="object"
                            string="Set to Draft"
                            invisible="state not in ['pending','sold','closed']"/>
                    <button name="action_pending" type="object"
                            string="Set to Pending"
                            invisible="state != 'draft'"/>

                    <button name="action_sold" type="object"
                            string="Set to Sold"
                            invisible="state != 'pending'"/>

                    <button name="action_closed" type="object"
                            string="Set to Closed"
                            invisible="state != 'sold'"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pending,sold,closed"/>
                </header>

                <sheet>
                    <widget name="web_ribbon" title="Late" bg_color="text-bg-danger" invisible="not is_late"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" invisible="state != 'sold'"/>


                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="object"
                                name="action_open_related_owner"
                                icon="fa-user"
                                invisible="not owner_id">
                            <field string="Owner"
                                   name="owner_count"
                                   widget="statinfo"/>
                        </button>
                    </div>


                    <!-- ✅ تحذير للحالة closed -->
                    <div class="alert alert-warning" role="alert" invisible="state != 'closed'">
                        <strong>⚠️ Closed Property:</strong>
                        This property is closed.
                        Modifications through the wizard are disabled.
                        Please reopen the property if changes are needed.
                    </div>

                    <div class="oe_title">
                        <label for="ref" string="Reference"/>
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                        <label for="name" string="Property Name"/>
                        <h2>
                            <field name="name" placeholder="e.g. Villa in Cairo" readonly="state == 'closed'"/>
                        </h2>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="active" groups="app_one.property_manager_group"
                            />
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_date_selling"/>
                            <field name="user_id"/>
                            <field name="is_late" invisible="1"/>
                        </group>

                        <group string="Pricing">
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                        </group>
                    </group>

                    <group string="Property Details">
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                        <group>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area" invisible="not garden"/>
                            <field name="garden_orientation" invisible="not garden"/>
                        </group>
                    </group>

                    <group string="Owner Information">
                        <group>
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <group string="Additional Info">
                        <field name="description" placeholder="Add any additional notes..."/>
                    </group>

                    <notebook>
                        <page string="Rooms" name="rooms">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="description" placeholder="e.g. Master Bedroom"/>
                                    <field name="area" string="Area (m²)"/>
                                </list>
                            </field>
                        </page>

                        <page string="Timeline" name="timeline">
                            <group>
                                <field name="create_time" readonly="1"/>
                                <field name="next_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="property_search_view" model="ir.ui.view">
        <field name="name">property.search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="ref"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="user_id"/>
                <field name="tag_ids"/>

                <filter string="My Properties" name="filter_my_properties"
                        domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="filter_draft"
                        domain="[('state','=','draft')]"/>
                <filter string="Pending" name="filter_pending"
                        domain="[('state','=','pending')]"/>
                <filter string="Sold" name="filter_sold"
                        domain="[('state','=','sold')]"/>
                <filter string="Closed" name="filter_closed"
                        domain="[('state','=','closed')]"/>
                <separator/>
                <filter string="Late" name="filter_late"
                        domain="[('is_late','=',True)]"/>
                <filter string="Has Garden" name="filter_garden"
                        domain="[('garden','=',True)]"/>
                <filter string="Has Garage" name="filter_garage"
                        domain="[('garage','=',True)]"/>
                <separator/>
                <filter string="Available This Month" name="filter_this_month"
                        domain="[('date_availability','&gt;=', context_today().strftime('%Y-%m-01')),
                                ('date_availability','&lt;=', (context_today()+relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Responsible" name="group_responsible" context="{'group_by':'user_id'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by':'owner_id'}"/>
                    <filter string="Availability Date" name="group_date" context="{'group_by':'date_availability'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_my_properties': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property
            </p>
            <p>
                Track and manage your real estate properties efficiently.
            </p>
        </field>
    </record>

    <!-- Server Action -->
    <record id="action_property_close" model="ir.actions.server">
        <field name="name">Close Properties</field>
        <field name="model_id" ref="app_one.model_property"/>
        <field name="binding_model_id" ref="app_one.model_property"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
            records.action_closed()
        </field>
    </record>

    <!-- Scheduled Action (Cron) - Odoo 18 Compatible -->
    <record id="check_expected_date_selling_cron" model="ir.cron">
        <field name="name">Property: Check Selling Dates</field>
        <field name="model_id" ref="app_one.model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_date_selling()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>

    <!-- client Action  for owl list view-->
    <record id="action_property_list_view" model="ir.actions.client">
        <field name="name">Properties</field>
        <field name="tag">app_one.property_list_view</field>
    </record>
    <!-- client Action  for owl form view-->

    <record id="action_property_form_owl" model="ir.actions.client">
    <field name="name">Property Form (OWL)</field>
    <field name="tag">app_one.property_form_view</field>
</record>




</odoo>