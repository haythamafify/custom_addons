<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_to_do_root"
              name="To Do"
              sequence="10"
              web_icon="todo_management,static/description/icon.png"/>

    <!-- Tasks Section -->
    <menuitem id="menu_tasks_section"
              name="Tasks"
              parent="menu_to_do_root"
              sequence="1"/>

    <menuitem id="menu_all_tasks"
              name="All Tasks"
              parent="menu_tasks_section"
              action="action_todo_task"
              sequence="1"/>

    <menuitem id="menu_my_tasks"
              name="My Tasks"
              parent="menu_tasks_section"
              action="action_todo_task_my_tasks"
              sequence="2"/>

    <menuitem id="menu_overdue_tasks"
              name="Overdue Tasks"
              parent="menu_tasks_section"
              action="action_todo_task_overdue"
              sequence="3"/>

    <!-- Configuration Section -->
    <menuitem id="menu_configuration"
              name="Configuration"
              parent="menu_to_do_root"
              sequence="99"/>

    <menuitem id="menu_task_tags"
              name="Task Tags"
              parent="menu_configuration"
              action="action_todo_task_tag"
              sequence="1"/>

</odoo>