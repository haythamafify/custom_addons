<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View (قائمة المواعيد) -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="name"/>
                <field name="date"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View (نموذج تفاصيل الموعد) -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment" class="o_form">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>

                    <button name="print_test"
                            string="Button To Test"
                            type="object"
                            class="btn-primary"
                            icon="fa-save"
                            confirm="Are you sure you want to print text?"
                            help="This button will print text in the logs"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="status"/>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action لفتح الواجهة -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">هنا تقدر تسجل المواعيد الطبية بسهولة</p>
        </field>
    </record>


</odoo>
