<odoo>
    <data>

        <!--        report action-->
        <record id="property_report" model="ir.actions.report">
            <field name="name">Property Report</field>
            <field name="model">property</field>
            <field name="report_type">qweb-pdf</field>
            <field name="binding_model_id" ref="model_property"/>
            <field name="binding_type">report</field>
            <field name="report_name">app_one.property_report_template</field>
        </record>
        <!--qweb report template-->
        <!-- QWeb Report Template -->
        <template id="property_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <!-- Centering the Title -->
                    <h1 style="text-align: center;">Property Report</h1>

                    <!-- Link to Bootstrap 5 CSS -->
                    <style>
                        @import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css');
                    </style>

                    <!-- Loop through the properties (docs) -->
                    <t t-foreach="docs" t-as="o">

                        <!-- General Information Section -->
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th colspan="2">General Information</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Property Name:</td>
                                    <td>
                                        <t t-esc="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Description:</td>
                                    <td>
                                        <t t-esc="o.description"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Postcode:</td>
                                    <td>
                                        <t t-esc="o.postcode"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Availability Date:</td>
                                    <td>
                                        <t t-esc="o.date_availability"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Expected Selling Date:</td>
                                    <td>
                                        <t t-esc="o.expected_date_selling"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Pricing Information Section -->
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th colspan="2">Pricing Information</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Expected Price:</td>
                                    <td>
                                        <t t-esc="o.expected_price"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Selling Price:</td>
                                    <td>
                                        <t t-esc="o.selling_price"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Price Difference:</td>
                                    <td>
                                        <t t-esc="o.diff"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Property Features Section -->
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th colspan="2">Property Features</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Bedrooms:</td>
                                    <td>
                                        <t t-esc="o.bedrooms"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Living Area:</td>
                                    <td>
                                        <t t-esc="o.living_area"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garage:</td>
                                    <td>
                                        <t t-esc="o.garage"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden:</td>
                                    <td>
                                        <t t-esc="o.garden"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden Area:</td>
                                    <td>
                                        <t t-esc="o.garden_area"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden Orientation:</td>
                                    <td>
                                        <t t-esc="o.garden_orientation"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Property State Section -->
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th colspan="2">Property State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Status:</td>
                                    <td>
                                        <t t-esc="o.state"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Late:</td>
                                    <td>
                                        <t t-esc="o.is_late"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
