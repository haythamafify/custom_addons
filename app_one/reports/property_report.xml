<odoo>
    <data>

        <!-- Report Action -->
        <record id="property_report" model="ir.actions.report">
            <field name="name">Property Report</field>
            <field name="model">property</field>
            <field name="report_type">qweb-pdf</field>
            <field name="binding_model_id" ref="model_property"/>
            <field name="binding_type">report</field>
            <!--            report_name is the name of the  template  ID    <template id="property_report_template"> -->
            <field name="report_name">app_one.property_report_template</field>
        </record>

        <!-- QWeb Report Template -->
        <template id="property_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <!-- Report Title -->
                    <div class="text-center mb-4">
                        <h2 style="font-weight: bold; color: #2c3e50;">üè† Property Report</h2>
                    </div>

                    <!-- Custom Style -->
                    <style>
                        th {
                        background-color: #3498db !important;
                        color: white;
                        }
                        td {
                        vertical-align: top;
                        }
                        table {
                        margin-bottom: 20px;
                        }
                        .section-title {
                        font-size: 16px;
                        font-weight: bold;
                        color: #2c3e50;
                        border-bottom: 2px solid #3498db;
                        margin-top: 20px;
                        margin-bottom: 10px;
                        }
                    </style>

                    <!-- Loop Through Properties -->
                    <t t-foreach="docs" t-as="o">

                        <!-- General Info -->
                        <p class="section-title">üìã General Information</p>
                        <table class="table table-sm table-bordered">
                            <tbody>
                                <tr>
                                    <td>Property Name</td>
                                    <td>
                                        <t t-esc="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td>
                                        <t t-esc="o.description"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Postcode</td>
                                    <td>
                                        <t t-esc="o.postcode"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Availability Date</td>
                                    <td>
                                        <t t-esc="o.date_availability"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Expected Selling Date</td>
                                    <td>
                                        <t t-esc="o.expected_date_selling"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Pricing Info -->
                        <p class="section-title">üí∞ Pricing Information</p>
                        <table class="table table-sm table-bordered">
                            <tbody>
                                <tr>
                                    <td>Expected Price</td>
                                    <td>
                                        <t t-esc="o.expected_price"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Selling Price</td>
                                    <td>
                                        <t t-esc="o.selling_price"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Price Difference</td>
                                    <td>
                                        <t t-esc="o.diff"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Features -->
                        <p class="section-title">üè° Property Features</p>
                        <table class="table table-sm table-bordered">
                            <tbody>
                                <tr>
                                    <td>Bedrooms</td>
                                    <td>
                                        <t t-esc="o.bedrooms"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Living Area</td>
                                    <td>
                                        <t t-esc="o.living_area"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garage</td>
                                    <td>
                                        <t t-esc="o.garage and 'Yes' or 'No'"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden</td>
                                    <td>
                                        <t t-esc="o.garden and 'Yes' or 'No'"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden Area</td>
                                    <td>
                                        <t t-esc="o.garden_area"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Garden Orientation</td>
                                    <td>
                                        <t t-esc="o.garden_orientation"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- State -->
                        <p class="section-title">üìå Property State</p>
                        <table class="table table-sm table-bordered">
                            <tbody>
                                <tr>
                                    <td>Status</td>
                                    <td>
                                        <t t-esc="o.state"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Late</td>
                                    <td>
                                        <t t-esc="o.is_late and 'Yes' or 'No'"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Footer Info -->
                        <p style="font-size: 12px; margin-top: 30px;">
                            <strong>Printed at:</strong>
                            <t t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                            <br/>
                            <strong>User:</strong>
                            <t t-esc="user.name"/>
                            |
                            <strong>Company:</strong>
                            <t t-esc="res_company.name"/>
                            <br/>
                            <strong>Report Date:</strong>
                            <t t-esc="context_timestamp(o.create_date).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>

                    </t>

                </t>
            </t>
        </template>

    </data>
</odoo>
